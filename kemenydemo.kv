<SplashScreen>:
    Button:
        text: 'Begin'
        size_hint: (.20,.10)
        pos_hint: {'center_x':.5, 'center_y':.5}
        on_press:
            app.root.transition.direction = 'left'
            app.root.current = app.root.next()

<EndScreen>:
    default_timelimit: 15
    default_iterations: 10000
    default_combinations: 15000

    Button:
        text: 'Review Questions'
        size_hint: (.20,.10)
        pos_hint: {'center_x':.15, 'center_y':.1}
        on_press:
            app.root.transition.direction = 'right'
            app.root.current = app.root.previous()
    Button:
        text: 'Process Dataset'
        size_hint: (.20,.10)
        pos_hint: {'center_x':.5, 'center_y':.1}
        on_press:
            #app.root.transition.direction = 'left'
            #app.root.current = app.root.next()
            #self.text = str(app.q_list[0].ids.weight_slider.value)
            root.process_dataset()
    # Strong initialization switch
    ToggleButton:
        text: "Strong Initializations"
        group: "init_type"
        allow_no_selection: False
        state: 'down'

        size_hint: (.20,.10)
        pos_hint: {'center_x':.4, 'center_y':.7}
        on_press:
            root.init_type_callback(True)

    # Random initialiation switch
    ToggleButton:
        text: "Random Initializations"
        group: "init_type"
        allow_no_selection: False
        size_hint: (.20,.10)
        pos_hint: {'center_x':.6, 'center_y':.7}
        on_press:
            root.init_type_callback(False)

    # Time limit input
    TextInput:
        id: time_limit_input
        text: str(root.default_timelimit)
        multiline: False
        disabled: True

        input_filter: 'float'
        hint_text: 'Timelimit (s)'
        size_hint: (.1,.06)
        pos_hint: {'center_x':.6, 'center_y':.55}

    # Number Iterations
    TextInput:
        id: iteration_input
        text: str(root.default_iterations)
        multiline: False

        input_filter: 'int'
        hint_text: '# Iterations'
        size_hint: (.1,.06)
        pos_hint: {'center_x':.5, 'center_y':.35}

    # Number Combinations
    TextInput:
        id: combination_input
        text: str(root.default_combinations)
        multiline: False
        disabled: False

        input_filter: 'int'
        hint_text: '# Samples'
        size_hint: (.1,.06)
        pos_hint: {'center_x':.4, 'center_y':.55}


<Question>:
    Label:
        id: text_label
        text: 'Undefined Question'
        size_hint: (.50,.15)
        pos_hint: {'center_x':.5, 'center_y':.8}
    Label:
        id: type_label
        text: '(Undefined Question Type)'
        size_hint: (.50,.15)
        pos_hint: {'center_x':.5, 'center_y':.75}

    # Labeling for weight slider
    Label:
        text: 'Priority Level:'
        size_hint: (.50,.15)
        pos_hint: {'center_x':.5, 'center_y':.32}
    Label:
        text: 'Low'
        size_hint: (.50,.15)
        pos_hint: {'center_x':.3, 'center_y':.28}
    Label:
        text: 'High'
        size_hint: (.50,.15)
        pos_hint: {'center_x':.7, 'center_y':.28}

    # Activation switch
    ToggleButton:
        id: activate_toggle
        allow_no_selection: False
        text: 'Activate'
        group: 'activation_group'
        state: 'down'
        size_hint: (.10,.10)
        pos_hint: {'center_x':.25, 'center_y':.5}
        on_press:
            root.activate_callback(False)
    # Deactivation switch
    ToggleButton:
        id: deactivate_toggle
        allow_no_selection: False
        text: 'Deactivate'
        group: 'activation_group'
        state: 'normal'
        size_hint: (.10,.10)
        pos_hint: {'center_x':.35, 'center_y':.5}
        on_press:
            root.activate_callback(True)

    # Distribution selection
    Spinner:
        id: distrib_spinner
        text: 'Heterogeneous'
        values: ('Heterogeneous', 'Homogeneous')
        size_hint: (.20,.10)
        pos_hint: {'center_x':.7, 'center_y':.5}

    # Weight slider
    Slider:
        id: weight_slider
        min: 0
        max: 25
        value: 12.5
        size_hint: (.50,.10)
        pos_hint: {'center_x':.5, 'center_y':.25}

    Button:
        id: nquestion_button
        text: 'Next Question'
        size_hint: (.20,.10)
        pos_hint: {'center_x':.85, 'center_y':.1}
        on_press:
            app.root.transition.direction = 'left'
            app.root.current = app.root.next()
    Button:
        id: pquestion_button
        text: 'Previous Question'
        size_hint: (.20,.10)
        pos_hint: {'center_x':.15, 'center_y':.1}
        on_press:
            app.root.transition.direction = 'right'
            app.root.current = app.root.previous()
